@model SCMS.ViewModels.RadiologyRequestListVm

@{
    ViewData["Title"] = "Radiology Requests";
}

<div class="container mt-4">

    <h2 class="mb-4">Radiology Requests 🧪</h2>

    <div class="card">
        <div class="card-header bg-dark text-white">
            Requests List
        </div>

        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Patient</th>
                        <th>Age</th>
                        <th>Phone</th>
                        <th>Test Name</th>
                        <th>Request Date</th>
                        <th>Status</th>
                        <th style="width:120px;">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (!Model.Requests.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">
                                No radiology requests found.
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var r in Model.Requests)
                        {
                            <tr>
                                <td>@r.PatientName</td>
                                <td>@r.Age</td>
                                <td>@r.Phone</td>
                                <td>@r.TestName</td>
                                <td>@r.RequestDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge
                                                @(r.Status == "Completed"
                                                                                      ? "bg-success"
                                                                                      : r.Status == "Pending"
                                                                                          ? "bg-warning text-dark"
                                                                                          : "bg-info")">
                                @r.Status
                            </span>
                        </td>
                        <td>
                            <a asp-controller="Reception"
                               asp-action="RadiologyRequestDetails"
                               asp-route-id="@r.RequestId"
                               class="btn btn-sm btn-primary">
                                Details
                            </a>
                        </td>
                    </tr>
                                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
