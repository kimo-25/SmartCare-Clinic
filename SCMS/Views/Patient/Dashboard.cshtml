@model SCMS.ViewModels.Patient.PatientVM
<link rel="stylesheet" href="~/css/clinic.css" />

<div class="patient-dashboard">
    <h2>Welcome, @Model.FullName</h2>

    @if (Model.IsProfileIncomplete)
    {
        <div class="profile-alert">
            <strong>⚠️ Attention:</strong>
            Please Complete Your Informatin

            <a asp-controller="Patient"
               asp-action="Profile"
               asp-route-id="@Model.PatientId"
               class="btn-complete">
                Complete Information
            </a>
        </div>
    }

    <div class="stats">
        <div class="card">
            <h4>Appointments</h4>
            <p>@Model.AppointmentsCount</p>
        </div>

        <div class="card">
            <h4>Prescriptions</h4>
            <p>@Model.PrescriptionsCount</p>
        </div>

        <div class="card">
            <h4>Medical Records</h4>
            <p>@Model.MedicalRecordsCount</p>
        </div>
    </div>
</div>
