@model SCMS.Models.RadiologyResult

@section Styles {
    <link rel="stylesheet" href="~/css/sidebar.css" />
    <link rel="stylesheet" href="~/css/clinic.css" />
}

@{
    ViewData["Title"] = "Radiology Result Details";
}

<div class="soft-header">
    <h2>Radiology Result Details</h2>
</div>

<div class="page-container">
    <div class="card">
        <p><strong>Test:</strong> @Model.Request?.TestName</p>
        <p><strong>Patient:</strong> @Model.Request?.Patient?.FullName</p>
        <p><strong>Doctor:</strong> @Model.Request?.Doctor?.FullName</p>
        <p><strong>Radiologist:</strong> @Model.Radiologist?.FullName</p>
        <p><strong>Status:</strong> @Model.Status</p>
        <p><strong>Date:</strong> @Model.ResultDate.ToString("dd/MM/yyyy HH:mm")</p>

        <hr />

        <h4>Report</h4>
        <p>@Model.Report</p>

        <hr />

        <h4>Ray File</h4>
        @if (!string.IsNullOrWhiteSpace(Model.ImagePath))
        {
            <a class="btn btn-primary" href="@Model.ImagePath" target="_blank">Open File</a>
        }
        else
        {
            <div class="form-alert">No file uploaded.</div>
        }

        <div class="form-actions" style="margin-top:15px;">
            <a asp-action="Requests" class="btn btn-secondary">Back to Requests</a>
        </div>
    </div>
</div>
